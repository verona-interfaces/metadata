{
    "$id": "https://raw.githubusercontent.com/verona-interfaces/metadata/master/schema/verona_module_editor.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Verona Module Editor",
    "description": "Profile of a Verona Module Editor",
    "type": "object",
    "default": {
        "@context": "https://w3id.org/iqb/verona-modules",
        "@type": "editor",
        "@id": "iqb-verona-editor-plaintext"
    },
    "properties": {
        "Verona Module": {
            "title": "Verona Module",
            "description": "General information of a verona module",
            "type": "object",
            "properties": {
                "ID": {
                    "title": "ID",
                    "description": "ID of a verona module",
                    "type": "string",
                    "pattern": "[A-Za-z0-9_-]"
                },
                "Version": {
                    "title": "Version",
                    "description": "Semantic Version of a verona module",
                    "type": "string",
                    "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$",
                    "_display": {
                        "placeholder": "MAJOR.MINOR.PATCH"
                    }
                },
                "Type": {
                    "title": "Type",
                    "description": "Type of a verona module",
                    "type": "string",
                    "enum": [
                        "Editor",
                        "Player"
                    ]
                },
                "Name": {
                    "title": "Name",
                    "description": "name of a verona module",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "de\": \"IQB-Editor f√ºr Text",
                            "en\": \"IQB editor for plaintext"
                        ]
                    }
                },
                "Description": {
                    "title": "Description",
                    "description": "Description of a verona module",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "_display": {
                            "rows": 5
                        }
                    }
                },
                "Maintainer": {
                    "$ref": "https://raw.githubusercontent.com/verona-interfaces/metadata/master/schema/verona_module_maintainer.json"
                },
                "Repository": {
                    "title": "Repository",
                    "description": "Repository in which the verona module code can be found",
                    "type": "object",
                    "properties": {
                        "Type": {
                            "title": "Type",
                            "description": "Type of repository",
                            "type": "string",
                            "enum": [
                                "Git",
                                "SVN",
                                "Mercurial"
                            ]
                        },
                        "URL": {
                            "title": "URL",
                            "description": "URL of a repository",
                            "type": "string",
                            "format": "uri",
                            "_display": {
                                "placeholder": "Please enter an URL"
                            }
                        }
                    }
                }
            },
            "required": [
                "ID",
                "Version",
                "Type",
                "Name"
            ]
        },
        "Editor-Only": {
            "title": "Verona Module Editor",
            "description": "Verona Module Type: Editor",
            "type": "object",
            "properties": {
                "not-supported-features-editor": {
                    "title": "Not-supported-features-editor",
                    "description": "Features that are exclusive to the editor and not supported",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "report-eager | the editor will send data only on-demand. So if the host likes to get all data at every change, it must send voeGetDefinitionRequest right after getting the change notification"
                        ]
                    }
                },
                "definition type": {
                    "title": "definition type",
                    "type": "string",
                    "_display": {
                        "placeholder": "name@version major.minor"
                    }
                }
            }
        }
    }
}